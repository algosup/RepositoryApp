@page "/users"

@using BlazorPresentation.Data
@using DomainLayer
@inject RightManagementService _rightManagementService

<h1>Users</h1>

<p>This component List the users from database.</p>

@if (users == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>User Id</th>
            <th>User Name</th>
            <th>User Email</th>
            <th>Creation Date</th>
            <th>Last Login</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in users)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.CreationDate.ToShortDateString()</td>
                <td>@user.LastLoginDate.ToShortDateString()</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private User[] users;

    protected override async Task OnInitializedAsync()
    {
        users = await _rightManagementService.GetUsersAsync();
    }
}